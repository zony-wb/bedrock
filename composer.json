{
  "name": "zony-wb/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://3u-web.com/",
  "authors": [
    {
      "name": "ZONY",
      "email": "zhong@3u-web.com",
      "homepage": "https://github.com/3uweb/bedrock"
    }
  ],
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
      "url": "https://packageist.3uweb.xyz/"
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "^1.4",
    "vlucas/phpdotenv": "^2.0.1",
    "oscarotero/env": "^1.1.0",
    "roots/wordpress": "@stable",
    "roots/wp-password-bcrypt": "1.0.0",
    "roots/wp-config": "1.0.0",
    "roots/soil": "^3.7",
    "inpsyde/wonolog": "^1.0.2",
    "3uweb/js_composer": "^5.6",
    "3uweb/revslider": "^5.4.8",
    "3uweb/ultimate_vc_addons": "^1.17.1",
    "3uweb/wp_advanced-custom-firlds-pro": "^5.7.8",
    "wpackagist-plugin/custom-post-type-ui": "^1.6.1",
    "wpackagist-plugin/custom-post-type-permalinks": "^3.2",
    "wpackagist-plugin/safe-redirect-manager": "^1.9",
    "wpackagist-plugin/intuitive-custom-post-order": "^3.1",
    "wpackagist-plugin/contact-form-7": "^5.1",
    "wpackagist-plugin/tinymce-advanced": "^4.8",
    "wpackagist-plugin/wordfence": "^7.1",
    "wpackagist-plugin/all-in-one-wp-migration": "^6.81",
    "wpackagist-plugin/wp-optimize": "^2.2",
    "wpackagist-plugin/wp-fastest-cache": "^0.8.8.8"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.0.2",
    "roave/security-advisories": "dev-master"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test": [
      "phpcs"
    ]
  }
}
